{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "module": "es2022",
        "target": "es2022",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "baseUrl": "src",
    },
    "include": [
        "src/**/*",
    ],
}